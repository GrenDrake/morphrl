    colour          165 42 42
    isPassable
    isOpaque

@tile TILE_WATER 5
    glyph           ~
    name            water
    colour          127 196 127

@tile TILE_DOWN_STAIRS 6
    glyph           >
    name            stairs_down
    colour          255 255 255
    isPassable
    isDownStair

@tile TILE_UP_STAIRS 7
    glyph           <
    name            stairs_up
    colour          255 255 255
    isPassable
    isUpStair

@tile TILE_GRASS 8
    glyph           ,
    name            grass
    description     A_patch_of_grass_that's_managed_to_survive_the_conditions_of_the_dungeon.
